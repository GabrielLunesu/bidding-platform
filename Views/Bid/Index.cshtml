@model IEnumerable<bidding_platform.Models.Bid>

@{
    ViewData["Title"] = "Bid List";
}

<!-- Bootstrap Container -->
<div class="container mt-5">
    <!-- Page Title -->
    <h1 class="text-center mb-5">My Bids</h1>

    <!-- "Create New" Button -->
    <div class="text-center mb-4">
        <a href="/Product" class="btn btn-success btn-lg animate__animated animate__bounceIn">
            <i class="fas fa-plus-circle"></i> Go to products
        </a>
    </div>

    <!-- Bids Table with Animation -->
    <div class="table-responsive animate__animated animate__fadeInUp">
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr class="text-center">
                    <th>Amount</th>
                    <th>Bid Date</th>
                    <th>User ID</th>
                    <th>Product ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.Amount</td>
                        <td>@item.BidDate</td>
                        <td>@item.User?.UserId</td>
                        <td>@item.Product?.ProductId</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.BidId" class="btn btn-sm btn-warning mx-1">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.BidId" class="btn btn-sm btn-info mx-1">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.BidId" class="btn btn-sm btn-danger mx-1">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
