@model bidding_platform.Models.Bid

@{
    ViewData["Title"] = "Bid Details";
}

<!-- Container to center content and add top margin -->
<div class="container mt-5">
    <!-- Page Title -->
    <h1 class="text-center mb-5">Bid Details</h1>

    <!-- Bid Information Card with Animation -->
    <div class="card mb-4 animate__animated animate__fadeIn">
        <div class="card-header text-black text-center">
            <h4>Bid Information</h4>
        </div>
        <div class="card-body text-black">
            <!-- Definition List Styled with Bootstrap -->
            <dl class="row">
                <dt class="col-sm-3"><strong>Amount:</strong></dt>
                <dd class="col-sm-9">@Model.Amount</dd>

                <dt class="col-sm-3"><strong>Bid Date:</strong></dt>
                <dd class="col-sm-9">@Model.BidDate</dd>

                <dt class="col-sm-3"><strong>User ID:</strong></dt>
                <dd class="col-sm-9">@Model.User?.UserId</dd>

                <dt class="col-sm-3"><strong>Product ID:</strong></dt>
                <dd class="col-sm-9">@Model.Product?.ProductId </dd>
            </dl>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model?.BidId" class="btn btn-warning mx-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary mx-2">Back to List</a>
    </div>
</div>
