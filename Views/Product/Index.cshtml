<section class="card-area pb-5 mt-5">
    @* <h2>Product Cards</h2> *@
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
