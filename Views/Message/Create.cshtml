@model bidding_platform.Models.Message

@{
    ViewData["Title"] = "Send Message";
}

<div class="container mt-5">
    <h1 class="mb-4">Send Message</h1>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="SenderId" class="control-label">From</label>
                    <select asp-for="SenderId" class="form-select" asp-items="ViewBag.SenderId"></select>
                    <span asp-validation-for="SenderId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="RecipientId" class="control-label">To</label>
                    <select asp-for="RecipientId" class="form-select" asp-items="ViewBag.RecipientId"></select>
                    <span asp-validation-for="RecipientId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Content" class="control-label">Message</label>
                    <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
