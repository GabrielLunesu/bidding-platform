@model bidding_platform.Models.Message

@{
    ViewData["Title"] = "Message Details";
}

<div class="container mt-5">
    <h1 class="mb-4">Message Details</h1>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">From: @Model.Sender?.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">To: @Model.Recipient?.Name</h6>
            <p class="card-text">@Model.Content</p>
            <p class="card-text"><small class="text-muted">Sent on: @(Model.SentDate?.ToString("g") ?? "N/A")</small></p>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
