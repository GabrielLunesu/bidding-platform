@model IEnumerable<bidding_platform.Models.Message>

@{
    ViewData["Title"] = "Messages";
}

<div class="container mt-5">
    <h1 class="mb-4">Messages</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Send New Message</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>From</th>
                <th>To</th>
                <th>Content</th>
                <th>Sent Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Sender?.Name</td>
                    <td>@item.Recipient?.Name</td>
                    <td>@item.Content</td>
                    <td>@(item.SentDate?.ToString("g") ?? "N/A")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.MessageId" class="btn btn-sm btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
